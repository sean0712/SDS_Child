<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <ImageButton
                android:id="@+id/btn_notice"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="notice"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/notice" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="가정통신문"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_board"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="board"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/board" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="공지사항"
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_photo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="photo"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/photo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="앨범"
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_calendar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="calendar"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/calendar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="일정"
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_invest"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="invest"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/invest" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="투자"
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_job"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="job"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/job" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="직업"
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="마이페이지"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="25dp" />

            <ImageButton
                android:id="@+id/btn_my_page"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/my_page" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>